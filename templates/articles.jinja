{% extends 'base.jinja' %}

{% block content %}
<div class="container mt-5">
    {% if role in ['ADMIN', 'ACADEMICS', 'STUDENT', 'ADMINISTRATIVE'] %}
    <!-- Article Submission Form -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Write an Article</h2>
            <form method="post" action="{{ url_for('submit_article') }}">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post Article</button>
            </form>
        </div>
    </div>
    {% endif %}

    <!-- Articles List -->
    <div class="row">
        <div class="col-md-12">
            <h2>Articles</h2>
            {% for article in articles %}
            <div class="card mb-3">
                <div class="card-header">
                    {{ article.title }}
                </div>
                <div class="card-body">
                    <p class="card-text">{{ article.content }}</p>
                    <p class="card-text"><small class="text-muted">Written by {{ article.author.username }} ({{article.author.role.name}}) on {{ article.created_at.strftime('%Y-%m-%d %H:%M:%S') }}</small></p>
                    
                    <!-- Comments Section -->
                    <div>
                        <h5>
                            <a href="#commentsCollapse-{{ article.id }}" data-toggle="collapse" aria-expanded="false" aria-controls="commentsCollapse-{{ article.id }}" class="d-block">
                                Comments <span class="collapse-arrow float-right">&#9660;</span>
                            </a>
                        </h5>
                        <div id="commentsCollapse-{{ article.id }}" class="collapse">
                            <form method="post" action="{{ url_for('submit_comment', article_id=article.id) }}">
                                <div class="form-group">
                                    <label for="comment">Add a comment</label>
                                    <textarea class="form-control" id="comment" name="comment" rows="2" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm">Post Comment</button>
                            </form>

                            <ul class="list-group mb-3">
                                {% for comment in article.comments %}
                                <li class="list-group-item">
                                    <p>{{ comment.content }}</p>
                                    <small class="text-muted">Commented by {{ comment.author.username }}  ({{comment.author.role.name}}) on {{ comment.created_at.strftime('%Y-%m-%d %H:%M:%S') }}</small>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>


<!-- Include Font Awesome for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<script>
    $(document).ready(function() {
        // Toggle chevron icon on collapse/expand
        $('.collapse').on('show.bs.collapse', function () {
            $(this).prev().find('.fa-chevron-down').removeClass('fa-chevron-down').addClass('fa-chevron-up');
        }).on('hide.bs.collapse', function () {
            $(this).prev().find('.fa-chevron-up').removeClass('fa-chevron-up').addClass('fa-chevron-down');
        });
    });
</script>

{% endblock %}
